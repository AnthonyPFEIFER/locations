{% extends 'base.html.twig' %}


{% block body %}

	<style>

		.formulaireNormalement {
			background-color: gold;
			border-radius: 20px;
			box-sizing: border-box;
			height: 500px;
			padding: 20px;
			width: 650px;
		}
		h1 {
			font-family: sans-serif;
			font-size: 36px;
			font-weight: 600;
			margin-top: 30px;
		}
		.input-container {
			height: 50px;
			position: relative;
			width: 100%;
			font-size: 1.5vw;
		}

		.ic1 {
			margin-top: 40px;
		}

		.ic2 {
			margin-top: 30px;
		}

		input {
			background-color: #303245;
			border-radius: 12px;
			border: 0;
			box-sizing: border-box;
			color: #eee;
			font-size: 18px;
			height: 100%;
			outline: 0;
			padding: 4px 20px 0;
			width: 100%;
		}
		.cut {
			background-color: #15172b;
			border-radius: 10px;
			height: 20px;
			left: 20px;
			position: absolute;
			top: -20px;
			transform: translateY(0);
			transition: transform 200ms;
			width: 76px;
		}

		.submit {
			background-color: #08d;
			border-radius: 12px;
			border: 0;
			box-sizing: border-box;
			color: #eee;
			cursor: pointer;
			font-size: 18px;
			height: 50px;
			margin-top: 38px;
			text-align: center;
			width: 100%;
		}
	</style>

	{{ form_start(locationForm) }}
	<div class="my-custom-class-for-errors">
		{{ form_errors(locationForm) }}
	</div>

	<div class="row formulaireNormalement">
		<h1>
			Ajouter une location
		</h1>
		<div class="col input-container">
			{{ form_row(locationForm.locataire) }}
		</div>
		<div class="cut"></div>
		<div class="col input-container">
			{{ form_row(locationForm.gain, { 'class': 'input'})}}
		</div>
		<div class="cut"></div>
		<div class="col input-container">
			{{ form_row(locationForm.dateDebut) }}
		</div>
		<div class="cut"></div>
		<div class="col input-container">
			{{ form_row(locationForm.dateFin) }}
		</div>
		<div class="cut"></div>
		<div class="input-container submit">
			{{ form_row(locationForm.submit, { 'label': 'Créer location'})}}
		</div>
	</div>
	{{ form_end(locationForm) }}

	<a href="{{ path('locations-list') }}">Retour à la liste</a>
{% endblock %}
