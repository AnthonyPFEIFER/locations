{% extends 'base.html.twig' %}

{% block title %}Hello LocationController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		th,
		td {
			width: 150px;
			border: solid #000 1px;
		}
		.form {
			background-color: #15172b;
			border-radius: 20px;
			box-sizing: border-box;
			height: 500px;
			padding: 20px;
			width: 320px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅
		</h1>
		<a href="{{ path('create_location') }}">Ajouter un projet</a>
		<table>
			<thead>
				<tr>
					<th>Nom du locataire</th>
					<th>Gain</th>
					<th>Date de début</th>
					<th>Date de fin</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for location in locations %}
					<tr>
						<td>{{ location.locataire }}</td>
						<td>{{ location.gain }}</td>
						<td>
							{{ location.dateDebut |date('d/m/Y')}}
						</td>
						<td>
							{{ location.dateFin |date('d/m/Y') }}
						</td>
						<td>
							<a href="{{ path('delete_location', {id: location.id}) }}">Supprimer la location</a>
						</td>
					</tr>
				</td>
			</tbody>
		</tr>
	{% endfor %}
</tbody></tbody></table></div>{% endblock %}
